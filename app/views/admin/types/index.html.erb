<div class="gener-group ml-5">
  <div class="title pt-4 col-2 text-center">
    <h3>動物の種類一覧・追加</h3>
  </div>
  <%= form_with model: @type, url: admin_types_path do |f| %>
    <div class="row mt-5">
      <div class="form-group col-1">
        <%= f.label :name, '種類名' %>
      </div>
      <div class="form-group col-3">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-2">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  <table class="table mt-5 col-3 bg-light">
    <thead>
      <tr class="text-center bg-light">
        <th>種類</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @types.each do |type| %>
        <tr>
          <td><%= type.name %></td>
          <td class="text-right pr-5"><%= link_to "編集する", edit_admin_type_path(type), class: 'btn btn-sm btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>