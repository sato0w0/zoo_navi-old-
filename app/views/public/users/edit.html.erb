<div class="container">
  <div class="row mt-5 mb-3">
    <h3>会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
      <div class="form-group table-responsive">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>